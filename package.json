{
  "name": "@hyperse-io/hyper-env",
  "version": "1.0.1",
  "description": "Populates your environment from .env files at run-time rather than build-time.",
  "repository": {
    "type": "git",
    "url": "git@github.com:hyperse-io/hyper-env.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": "./bin/hyper-env.mjs",
  "files": [
    "./bin/",
    "./dist/",
    "./index.js"
  ],
  "scripts": {
    "build": "tsup",
    "next": "next build",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" src",
    "lint-fix": "yarn lint --fix",
    "test": "run-s test-unit",
    "test-unit": "vitest run",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "lint-staged-files": "lint-staged --allow-empty",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "cz": "cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@armit/commander": "^0.1.8",
    "@armit/eslint-config-bases": "0.1.6",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.3",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^20.12.12",
    "@types/postcss-js": "^4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/shell-quote": "1.7.5",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "execa": "^9.1.0",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.4",
    "next": "14.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "shell-quote": "1.8.1",
    "ts-node": "11.0.0-beta.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.2.2"
}
